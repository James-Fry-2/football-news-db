FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libpq-dev \
    gcc \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first for better caching
COPY requirements/base.txt requirements/llm.txt ./
RUN pip install --no-cache-dir -r base.txt -r llm.txt

# Copy application code
COPY src/ ./src/

# Create a script to run the LLM processor
COPY scripts/run_llm_processor.py .

CMD ["python", "scripts/run_llm_processor.py"] 